<p><%= link_to '返回', admin_works_path %></p>

<div class="row">
  <div class="col-md-5">
    <h4>大类别</h4>
  </div>
  <div class="col-md-7">
    <h4>
      <% @work.project_types.collect(&:cn_name).each do |project_type_name| %>
        <span class="label label-info"><%= project_type_name %></span>
      <% end %>
    </h4>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h4>小类别</h4>
  </div>
  <div class="col-md-7">
    <h4>
      <% @work.residential_types.collect(&:cn_name).each do |residential_type_name| %>
        <span class="label label-info"><%= residential_type_name %></span>
      <% end %>
    </h4>
  </div>
</div>

<div class="row">
    <div class="col-sm-6">
      <% if @work.snapshot_jpg.present? %>
        <p><%= @work.snapshot_jpg.url %></p>
        <%= image_tag @work.snapshot_jpg.url, style: "width: 100%;" %>
      <% else %>
        <p>连JPG格式也没有！</p>
      <% end %>
    </div>
    <div class="col-sm-6">
      <% if @work.snapshot_webp.present? %>
        <p><%= @work.snapshot_webp.url %></p>
        <%= image_tag(@work.snapshot_webp.url, style: "width: 100%;") %>
      <% else %>
        <p>没有Webp格式</p>
      <% end %>
    </div>
</div>

<% I18n.locale = :cn %>

<%= render partial: 'work_detail' -%>

<div class="row">
  <div class="col-md-5">
    <p>设计完成时间</p>
  </div>
  <div class="col-md-7">
    <p><%= @work.design_completion %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h6>竣工时间</h6>
  </div>
  <div class="col-md-7">
    <h6><%= @work.construction_completion %></h6>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <p>所在城市</p>
  </div>
  <div class="col-md-7">
    <p><span class="label label-info"><%= @work.city.name %></span></p>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h6>用地面积</h6>
  </div>
  <div class="col-md-7">
    <h6><%= @work.site_area %></h6>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <p>规划面积</p>
  </div>
  <div class="col-md-7">
    <p><%= @work.planning_area %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <h6>建筑面积</h6>
  </div>
  <div class="col-md-7">
    <h6><%= @work.architecture_area %></h6>
  </div>
</div>
<% I18n.locale = :en %>

<%= render partial: 'work_detail' -%>


<% @work.work_pictures.each do |work_picture| %>
  <div class="row">
      <div class="col-sm-6">
        <p><%= work_picture.album_jpg.url %></p>
        <%= image_tag work_picture.album_jpg.url, style: "width: 100%;" %>
      </div>
      <div class="col-sm-6">
        <% if work_picture.album_webp.present? %>
          <p><%= work_picture.album_webp.url %></p>
          <%= image_tag(work_picture.album_webp.url, style: "width: 100%;") %>
        <% else %>
          <p>没有Webp格式</p>
        <% end %>
      </div>
  </div>
<% end %>

