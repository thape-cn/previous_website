<%= link_to '返回', admin_portfolios_path %>

<h3>作品集-<%= @portfolio.id -%>-编辑</h3>

<hr>

<div class="row">
  <div class="col-md-8">
    <%= form_for @portfolio, url: admin_portfolio_path(id: @portfolio.id), local: true do |f| %>
      <%= render 'admin/shared/error_messages', object: @portfolio %>
      <%= hidden_field_tag 'page', @page %>

      <div class="col-12">
        <%= f.label :title, "标题" %>
        <br />
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="col-12">
        <%= f.label :sub_title, "子标题" %>
        <br />
        <%= f.text_field :sub_title, class: 'form-control' %>
      </div>
      <br />
      <div class="col-4">
        <%= f.label :pdf_file, "PDF 文件" %>
        <br />
        <%= f.file_field :pdf_file, class: 'form-control' %>
      </div>
      <div class="col-4">
        <%= f.label :cover_jpg, "JPG/PNG 封面文件" %>
        <br />
        <%= f.file_field :cover_jpg, class: 'form-control' %>
      </div>
      <div class="col-4">
        <%= f.label :cover_webp, "WEBP 封面文件" %>
        <br />
        <%= f.file_field :cover_webp, class: 'form-control' %>
      </div>
      <div class="col-4">
        <%= f.label :pixel_height, "像素高，不高于900" %>
        <br />
        <%= f.text_field :pixel_height, class: 'form-control' %>
      </div>
      <div class="col-4">
        <%= f.label :pixel_width, "像素宽，不宽于700" %>
        <br />
        <%= f.text_field :pixel_width, class: 'form-control' %>
      </div>

      <div class="col-4">
        <%= f.label :position, "排序位置" %>
        <br />
        <%= f.text_field :position, class: 'form-control' %>
      </div>
      <br />
      <%= f.submit '更新作品集', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

