<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<h3>天华管理团队列表</h3>

<br>

<div class="row">
  <div class="col-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>URL</th>
          <th>预览</th>
          <th>更新日期</th>
        </tr>
      </thead>
      <tbody>
        <% @pictures.each do |picture| %>
          <tr>
            <td><%= picture.id %></td>
            <td><%= picture.image.url %></td>
            <td><img src="<%= picture.image.url -%>?x-oss-process=image/resize,w_200" /></td>
            <td><%= picture.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @pictures %>
