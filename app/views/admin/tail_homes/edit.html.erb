<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<h3>新首页信息修改</h3>
<hr>

<%= form_for @home, url: admin_tail_home_path, html: { multipart: true } do |f| %>
  <%= render 'admin/shared/error_messages', object: @home %>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">首页最新项目</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_1.url, width: '300' if @home.new_project_photo_1.present? %>
              <p>
                <%= f.label :new_project_photo_1, "最新项目 1" %> <small>尺寸W:880*H:880像素</small>
                <%= f.file_field :new_project_photo_1 %>
              </p>
              <p>
                <%= f.label :new_project_1_id, "最新项目 1 的作品 ID" %>
                <%= f.text_field :new_project_1_id %>
              </p>
            </div>
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_2l.url, width: '300' if @home.new_project_photo_2l.present? %>
              <p>
                <%= f.label :new_project_photo_2l, "最新项目 2l" %> <small>尺寸W:880*H:1794像素</small>
                <%= f.file_field :new_project_photo_2l %>
              </p>
              <p>
                <%= f.label :new_project_2_id, "最新项目 2 的作品 ID" %>
                <%= f.text_field :new_project_2_id %>
              </p>
            </div>
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_3w.url, width: '300' if @home.new_project_photo_3w.present? %>
              <p>
                <%= f.label :new_project_photo_3w, "最新项目 3w" %> <small>尺寸W:1794*H:880像素</small>
                <%= f.file_field :new_project_photo_3w %>
              </p>
              <p>
                <%= f.label :new_project_3_id, "最新项目 3 的作品 ID" %>
                <%= f.text_field :new_project_3_id %>
              </p>
            </div>
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_4.url, width: '300' if @home.new_project_photo_4.present? %>
              <p>
                <%= f.label :new_project_photo_4, "最新项目 4" %> <small>尺寸W:880*H:880像素</small>
                <%= f.file_field :new_project_photo_4 %>
              </p>
              <p>
                <%= f.label :new_project_4_id, "最新项目 4 的作品 ID" %>
                <%= f.text_field :new_project_4_id %>
              </p>
            </div>
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_5.url, width: '300' if @home.new_project_photo_5.present? %>
              <p>
                <%= f.label :new_project_photo_5, "最新项目 5" %> <small>尺寸W:880*H:880像素</small>
                <%= f.file_field :new_project_photo_5 %>
              </p>
              <p>
                <%= f.label :new_project_5_id, "最新项目 5 的作品 ID" %>
                <%= f.text_field :new_project_5_id %>
              </p>
            </div>
            <div class="col-sm-6">
              <%= image_tag @home.new_project_photo_6.url, width: '300' if @home.new_project_photo_6.present? %>
              <p>
                <%= f.label :new_project_photo_6, "最新项目 6" %> <small>尺寸W:880*H:880像素</small>
                <%= f.file_field :new_project_photo_6 %>
              </p>
              <p>
                <%= f.label :new_project_6_id, "最新项目 6 的作品 ID" %>
                <%= f.text_field :new_project_6_id %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <hr >

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">首推新闻</div>
        <div class="panel-body">
          <%= image_tag @home.hero_news_photo.url, width: '500' if @home.hero_news_photo.present? %>
          <p>
            <%= f.label :hero_news_photo, "头条新闻图片" %> <small>尺寸W:1920*H:700像素</small>
            <%= f.file_field :hero_news_photo %>
          </p>
          <p>
            <%= f.label :hero_news_id, "新闻ID" %>
            <%= f.text_field :hero_news_id, class: 'form-control' %>
          </p>
          <p>
            <%= f.label :hero_news_title_cap, "新闻标题的下划线字数" %>
            <%= f.text_field :hero_news_title_cap, class: 'form-control' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <%= f.submit "修改内容", class: "btn btn-primary" %>
<% end %>
