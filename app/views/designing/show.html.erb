<% provide(:title, "设计团队") %>
<% provide(:meta_title, "设计团队") %>

<div class="container personal">
  <div class="row visible-lg-block visible-md-block">
    <div class="col-md-6">
      <%= image_tag(@person.photo.url, class: "personal-img") %>
      <h5 class="related-reading">相关阅读</h5>
      <ul class="media-list">
        <% @infos.each do |info| %>
          <li class="media">
            <div class="media-left">
              <a href="<%= info_path(info) -%>">
                <%= image_tag(info.snapshot.url, size: "80x80") %>
              </a>
            </div>
            <div class="media-body">
              <p><%= info.title -%></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h4><%= @person.name %></h4>
      <hr>
      <h5><%= simple_format @person.title %></h5>
      <%= raw @person.introduce %>
    </div>
  </div>

  <div class="row visible-xs-block visible-sm-block">
    <div class="col-md-6">
      <%= image_tag(@person.photo.url, class: "personal-img") %>
    </div>
    <div class="col-md-6">
      <h4><%= @person.name %></h4>
      <hr>
      <h5><%= simple_format @person.title %></h5>
      <%= raw @person.introduce %>
    </div>
    <div class="col-md-6">
    <h5 class="related-reading">相关阅读</h5>
      <ul class="media-list">
        <% @infos.each do |info| %>
          <li class="media">
            <div class="media-left">
              <a href="<%= info_path(info) -%>">
                <%= image_tag(info.snapshot.url, size: "80x80") %>
              </a>
            </div>
            <div class="media-body">
              <p><%= info.title -%></p>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>


</div>
