<% provide(:title, @case.title) %>

<div id="carouselFade" class="carousel slide carousel-fade case-banner" data-ride="carousel">
  <div class="carousel-inner" role="listbox">
    <% active_showed = false %>
    <% @case.case_pictures.each do |case_picture| %>
      <% next unless case_picture.album_identifier.present? %>
      <div class="item <%= active_showed == true ? nil : 'active' %>">
        <%= image_tag(case_picture.album.url, alt: @case.title, class: "case-banner-img img-responsive") %>
        <div class="container">
          <div class="carousel-caption">
          </div>
        </div>
      </div>
      <% active_showed = true %>
    <% end %>
  </div>
  <a class="left carousel-control" href="#carouselFade" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carouselFade" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="container-fluid">
  <div class="row case-content">
    <div class="col-md-6 case-project">
      <h4><%= @case.title %></h4>
      <h5>项目概况</h5>
      <%= simple_format(@case.other) %>
    </div>
    <div class="col-md-4 col-md-offset-2 case-project">
      <h4 class="tianhua-font">相关推荐</h4>
      <div class="media">
        <a href="<%= case_path(@second_case) -%>">
          <div class="media-left">
              <%= image_tag(@first_case.snapshot.url, size: "100x100") %>
          </div>
          <div class="media-body">
            <h5 class="media-heading"><%= @first_case.title -%></h5>
          </div>
        </a>
      </div>
      <div class="media">
        <a href="<%= case_path(@second_case) -%>">
          <div class="media-left">
              <%= image_tag(@second_case.snapshot.url, size: "100x100") %>
          </div>
          <div class="media-body">
            <h5 class="media-heading"><%= @second_case.title -%></h5>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
